    "esbuild": "^0.27.0",
    "vite": "^7.2.2",
    "vite-plugin-ruby": "^5.1.1"
  },
  "scripts": {
    "build": "esbuild --loader:.jsx=jsx app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
